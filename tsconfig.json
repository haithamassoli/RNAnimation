{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@Navigation/*": ["src/navigation/*"],
      "@Components/*": ["src/components/*"],
      "@Screens/*": ["src/screens/*"],
      "@Types/*": ["src/types/*"],
      "@GlobalStyle/*": ["src/styles/*"],
      "@Assets/*": ["assets/*"],
      "@Utils/*": ["src/utils/*"],
      "@Src/*": ["src/*"]
    }
  }
}
